.show-other-product
  %h2.show-other-product__head
    = link_to "#{@product.seller.nickname}さんのそのほかの出品", root_path, class: "show-other-product__head--link"
  .show-other-product-item
    - @user_products.each do |product|
      = link_to root_path, class: "show-other-product-item__link" do
        = image_tag ("#{product.images[0].url}"), class: "show-other-product-item__img"
        %p.show-other-product-item__name
          = product.name
        .show-other-product-item-info-price
          %p.show-other-product-item-info-price__main
            ¥ #{product.price}
            -# サーバーサイド実装時に変更(likes機能)
            - if true
              %span.show-other-product-item-info-price__main
                %i.fa.fa-heart.show-other-product-item-info-price__main--red
                = product.likes.length
          %p.show-other-product-item-info-price__sub
            (税込)

  %h2.show-other-product__head
