%head
  %script{src: "https://js.pay.jp/", type: "text/javascript"}

%body
  .sign-up
    %header.sign-up__header
      %h1.sign-up__header__rogo
        = link_to root_path do
          = image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3160895340", alt: "mercari", class: "sign-up__header__rogo__img"
      %nav.progress-bar
        %ol.progress-bar__container
          %li.progress-bar__container__list
            会員情報
            .progress-bar__container__list__progress-status.through
          %li.progress-bar__container__list
            電話番号認証
            .progress-bar__container__list__progress-status.through
          %li.progress-bar__container__list
            住所入力
            .progress-bar__container__list__progress-status.through
          %li.progress-bar__container__list.active
            支払い方法
            .progress-bar__container__list__progress-status.active-status
          %li.progress-bar__container__list
            完了
            .progress-bar__container__list__progress-status

    %main.sign-up__main
      %section.sign-up__main__container
        %h2.sign-up__main__container__head 支払い方法
        = form_with url: users_path, method: "post" do |f|
          .sign-up__main__container__body
            .sign-up__main__container__body__form
              .form-group
                %label.form-label カード番号
                %span.form-require 必須
                = f.number_field :card_number, placeholder: "半角数字のみ", class: "input-default"
                %ul.signup-card-list
                  %li
                    = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?3856598694", width: "49", height: "20"
                  %li
                    = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?3856598694", width: "34", height: "20"
                  %li
                    = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?3856598694", width: "30", height: "20"
                  %li
                    = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?3856598694", width: "32", height: "20"
                  %li
                    = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?3856598694", width: "21", height: "20"
                  %li
                    = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?3856598694", width: "32", height: "20"
                  %li
                    = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?3856598694", width: "32", height: "20"
              .form-group
                %label.form-label 有効期限
                %span.form-require 必須
                %br
                .select-wrap.year-month
                  = f.select :valid_month, [ ["---", "---"], ["1", "1"], ["2", "2"]], {}, {class: "select-default"}
                  %i.fa.fa-chevron-down
                %span 月
                %br
                .select-wrap.year-month
                  = f.select :valid_year, [ ["---", "---"], ["2020", "2020"], ["2019", "2019"], ["2018", "2018"]], {}, {class: "select-default"}
                  %i.fa.fa-chevron-down
                %span 年
              .form-group
                %label.form-label セキュリティコード
                %span.form-require 必須
                = f.number_field :security_code, placeholder: "カード背面4桁もしくは3桁の番号", class: "input-default"
              .security-code-message
                .security-code-message__text
                  %span.security-code-message__text__question ?
                  カード裏面の番号とは？
              = f.submit "次へ進む", class: "btn-default btn-red", id: "card-registration__btn"
= render "shared/sell-footer"
