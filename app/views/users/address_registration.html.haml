%body
  .sign-up
    %header.sign-up__header
      %h1.sign-up__header__rogo
        = link_to root_path do
          = image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3160895340", alt: "mercari", class: "sign-up__header__rogo__img"
      %nav.progress-bar
        %ol.progress-bar__container
          %li.progress-bar__container__list
            会員情報
            .progress-bar__container__list__progress-status.through
          %li.progress-bar__container__list
            電話番号認証
            .progress-bar__container__list__progress-status.through
          %li.progress-bar__container__list.active
            住所入力
            .progress-bar__container__list__progress-status.active-status
          %li.progress-bar__container__list
            支払い方法
            .progress-bar__container__list__progress-status
          %li.progress-bar__container__list
            完了
            .progress-bar__container__list__progress-status

    %main.sign-up__main
      %section.sign-up__main__container
        %h2.sign-up__main__container__head 住所入力
        = form_with model: @user do |f|
          .sign-up__main__container__body
            .sign-up__main__container__body__form
              .form-group
                %label.form-label お名前
                %span.form-require 必須
                = f.text_field :first_name, placeholder: "例) 山田", class: "input-default"
                = f.text_field :last_name, placeholder: "例) 彩", class: "input-default"
              .form-group
                %label.form-label お名前カナ
                %span.form-require 必須
                = f.text_field :first_name_kana, placeholder: "例) ヤマダ", class: "input-default"
                = f.text_field :last_name_kana, placeholder: "例) アヤ", class: "input-default"
              .form-group
                %label.form-label 郵便番号
                %span.form-require 必須
                = f.text_field :postal_code, placeholder: "例) 123-4567", class: "input-default"
              .form-group
                %label.form-label 都道府県
                %span.form-require 必須
                .select-wrap
                  = f.select :prefecture, [ ["---", "---"], ["東京", "東京"], ["埼玉", "埼玉"]], {}, {class: "select-default"}
                  %i.fa.fa-chevron-down
              .form-group
                %label.form-label 市区町村
                %span.form-require 必須
                = f.text_field :city, placeholder: "例) 横浜市緑区", class: "input-default"
              .form-group
                %label.form-label 番地
                %span.form-require 必須
                = f.text_field :address, placeholder: "例) 青山1−1−1", class: "input-default"
              .form-group
                %label.form-label 建物名
                %span.form-arbitrary 任意
                = f.text_field :building_name, placeholder: "例) 柳ビル103", class: "input-default"
              = f.submit "次へ進む", class: "btn-default btn-red"
= render "shared/sell-footer"
